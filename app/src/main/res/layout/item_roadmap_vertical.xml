<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="140dp">

    <TextView
        android:id="@+id/milestoneContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:background="@drawable/milestone_bubble"
        android:layout_toEndOf="@id/milestoneArrow"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Test Milestone"/>

    <ImageView
        android:id="@+id/milestoneArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:rotation="-90"
        android:background="@drawable/milestone_arrow"
        android:layout_toEndOf="@+id/milestoneButton"/>

    <ImageView
        android:id="@+id/milestoneButton"
        android:tag="set"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/milestone_circle_filled"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        />

</RelativeLayout>