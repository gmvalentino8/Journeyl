<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valentino.journeyl">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CreateGoalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RoadmapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MilestoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.UserDialog"/>
        <activity
            android:name=".activity.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CreateMilestoneActivity" />
        <activity android:name=".activity.ReflectionActivity"></activity>
    </application>

</manifest>